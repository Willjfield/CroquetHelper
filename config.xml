<?xml version='1.0' encoding='utf-8'?>
<widget id="com.willjfield" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Croquet Helper</name>
    <description>
        A simple app to help keep track of USCA regulation croquet games.
    </description>
    <author email="willjfield@gmail.com" href="willjfield.com">
        Will J. Field
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
<!--     <plugin name="org.apache.cordova.media" /> -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.0.0" />
    <preference name="Orientation" value="portrait" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
</widget>
